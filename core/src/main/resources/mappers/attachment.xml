<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ymss.ynote.storage.provider.AttachmentStorageProvider">

	<insert id="save" useGeneratedKeys="true" keyProperty="id">
		insert into attachment (name, notebook_id) values(#{name}, #{notebook.id});		
	</insert>
	
	<select id="getById" resultMap="attachmentMap">
		select * from attachment
		where id = #{0}
	</select>
	
	<select id="getAttachmentsInNotebook" resultMap="attachmentMap">
		select * from attachment
		where notebook_id = #{0}
	</select>
	
	<insert id="saveAttachmentsInNotebook" useGeneratedKeys="true" keyProperty="id">
		insert into attachment (name, notebook_id)
		<foreach collection="attachments" item="item" index="index" separator="union all">
			select #{item.name}, #{item.notebook.id}
		</foreach>
	</insert>

	<resultMap id="attachmentMap" type="Attachment">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="createdStamp" column="created_date" />
		<result property="updatedStamp" column="updated_date" />
		<association property="notebook" javaType="Notebook" column="notebook_id"
			select="com.ymss.ynote.storage.provider.NotebookStorageProvider.getById" />
	</resultMap>
</mapper>