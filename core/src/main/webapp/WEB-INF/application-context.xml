<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.1.xsd
	http://www.springframework.org/schema/jee
	http://www.springframework.org/schema/jee/spring-jee-3.1.xsd">

	<context:component-scan base-package="com.ymss.ynote" />
	<context:property-placeholder location="classpath:/ynote.properties" />

	<!-- use JNDI to access data source defined in jboss -->
	<jee:jndi-lookup expected-type="javax.sql.DataSource"
		id="dataSource" jndi-name="java:jboss/datasources/ynoteMysqlDS" />

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:mybatis-config.xml" />
		<property name="mapperLocations" value="classpath:mappers/*.xml" />
		<property name="typeAliasesPackage" value="com.ymss.ynote.note" />
	</bean>

	<!-- <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.ymss.ynote.storage.provider" />
	</bean>-->

	<bean id="notebookMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.ymss.ynote.storage.provider.NotebookStorageProvider" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
	<bean id="categoryMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.ymss.ynote.storage.provider.NotebookCategoryProvider" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
</beans>